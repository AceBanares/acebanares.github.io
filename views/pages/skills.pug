extends ../layout

block content
    section.colorlib-skills(data-section='skills')
        .colorlib-narrow-content
            .row
                .col-md-6.col-md-offset-3.col-md-pull-3.animate-box(data-animate-effect='fadeInLeft')
                    span.heading-meta My Specialty
                    h2.colorlib-heading.animate-box My Skills
            .row
                .col-md-12.animate-box(data-animate-effect='fadeInLeft')
                    p
                        | I am multilingual: my main language is Filipino, my second language English, the rest are all programming languages. 
                .col-md-6.animate-box(data-animate-effect='fadeInLeft')
                    .progress-wrap
                        h3 HTML
                        .progress
                            .progress-bar.color-1(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100', style='width:75%')
                                span 75%
                .col-md-6.animate-box(data-animate-effect='fadeInRight')
                    .progress-wrap
                        h3 PHP
                        .progress
                            .progress-bar.color-2(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width:60%')
                                span 60%
                .col-md-6.animate-box(data-animate-effect='fadeInLeft')
                    .progress-wrap
                        h3 C Programming
                        .progress
                            .progress-bar.color-3(role='progressbar', aria-valuenow='85', aria-valuemin='0', aria-valuemax='100', style='width:85%')
                                span 85%
                .col-md-6.animate-box(data-animate-effect='fadeInRight')
                    .progress-wrap
                        h3 JavaScript
                        .progress
                            .progress-bar.color-4(role='progressbar', aria-valuenow='90', aria-valuemin='0', aria-valuemax='100', style='width:90%')
                                span 90%
                .col-md-6.animate-box(data-animate-effect='fadeInLeft')
                    .progress-wrap
                        h3 CSS
                        .progress
                            .progress-bar.color-5(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:70%')
                                span 70%
                .col-md-6.animate-box(data-animate-effect='fadeInRight')
                    .progress-wrap
                        h3 Visual Basic .NET
                        .progress
                            .progress-bar.color-6(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width:80%')
                                span 80%
    #colorlib-counter.colorlib-counters(style='background-image: url(images/cover_bg_1.jpg);', data-stellar-background-ratio='0.5')
        .overlay
        .colorlib-narrow-content
            .row
            .row
                .col-md-3.text-center.animate-box
                    span.colorlib-counter.js-counter(data-from='0', data-to='12', data-speed='5000', data-refresh-interval='50')
                    span.colorlib-counter-label Years learning in school
                .col-md-3.text-center.animate-box
                    span.colorlib-counter.js-counter(data-from='0', data-to='18', data-speed='5000', data-refresh-interval='50')
                    span.colorlib-counter-label Years of computer programming
                .col-md-3.text-center.animate-box
                    span.colorlib-counter.js-counter(data-from='0', data-to='8', data-speed='5000', data-refresh-interval='50')
                    span.colorlib-counter-label Years of customer service
                .col-md-3.text-center.animate-box
                    span.colorlib-counter.js-counter(data-from='0', data-to='8', data-speed='5000', data-refresh-interval='50')
                    span.colorlib-counter-label Years resident of Canada
    section.colorlib-services(data-section='services')
        .colorlib-narrow-content
            .row
                .col-md-6.col-md-offset-3.col-md-pull-3.animate-box(data-animate-effect='fadeInLeft')
                    span.heading-meta What I do?
                    h2.colorlib-heading Here are some of my expertise
            .row.row-pt-md
                .col-md-4.text-center.animate-box
                    .services.color-1
                        span.icon
                            i.icon-bulb
                        .desc
                            h3 Critical Thinking
                            p My thirst for knowlegde helps me form proper judgments
                .col-md-4.text-center.animate-box
                    .services.color-2
                        span.icon
                            i.icon-data
                        .desc
                            h3 Analytical Thinking
                            p My attention to details helps me find patterns and solutions
                .col-md-4.text-center.animate-box
                    .services.color-3
                        span.icon
                            i.icon-phone3
                        .desc
                            h3 Mathematical Ability
                            p My love for Math helps me in performing basic mental calculations
                .col-md-4.text-center.animate-box
                    .services.color-4
                        span.icon
                            i.icon-layers2
                        .desc
                            h3 Computer Programming
                            p With the proper mixture of Math, logic, and knowledge, we can talk to computers
                .col-md-4.text-center.animate-box
                    .services.color-5
                        span.icon
                            i.icon-data
                        .desc
                            h3 Software &amp; Web Design
                            p With the proper use of language, we can command computers
                .col-md-4.text-center.animate-box
                    .services.color-6
                        span.icon
                            i.icon-phone3
                        .desc
                            h3 Information / Database Management
                            p With the proper use of knowledge, we can analyze, and manipulate data
