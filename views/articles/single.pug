extends ../layout

block content
	section.article-box(data-section='article')
		.colorlib-narrow-content
			.row
				.col-md-6.col-md-offset-3.col-md-pull-3.animate-box(data-animate-effect='fadeInLeft')
					span.heading-meta= `Author: ${article.authors}`
					h2.colorlib-heading= `Title: ${article.title}`
					p= article.body
			.options
				ul
					a.link(href='/articles')
						span.mask
							.link-container
								span.link-title1.title Go Back
								span.link-title2.title Go Back
						.link-icon
							svg.iconleft(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='currentColor', viewBox='0 0 16 16')
								path(fill-rule='evenodd', d='M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z')
							svg.iconleft(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='currentColor', viewBox='0 0 16 16')
								path(fill-rule='evenodd', d='M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z')
					a
						form(action=`/articles/${article._id}/delete` method="post")
							button.btn-link.title(type="submit") Delete Article
					a.link(href=`/articles/${article._id}/edit`)
						span.mask
							.link-container
								span.link-title1.title Edit Article
								span.link-title2.title Edit Article
						.link-icon
							svg.iconright(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 16 16')
								path(fill-rule='evenodd', d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z')
							svg.iconright(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 16 16')
							path(fill-rule='evenodd', d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z')